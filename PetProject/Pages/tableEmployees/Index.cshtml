@page
@model PetProject.Pages.tableEmployees.IndexModel

@{
    ViewData["Title"] = "Table Employees";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Table Employees</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table>
    <caption class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableEmployees[0]!.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableEmployees[0]!.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableEmployees[0]!.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableEmployees[0]!.JobTitel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TableEmployees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item!.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.SurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item!.JobTitel)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@if (item != null) {@item.Id }">Edit</a> |
                <a asp-page="./Details" asp-route-id="@if (item != null) {@item.Id }">Details</a> |
                <a asp-page="./Delete" asp-route-id="@if (item != null) {@item.Id }">Delete</a>
            </td>
        </tr>
}
    </tbody></caption>
</table>
